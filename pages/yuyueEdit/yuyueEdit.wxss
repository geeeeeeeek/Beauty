.form-item{
  padding: 20rpx 20rpx;
  border-bottom: 1rpx #f5f5f5 solid;
  display: flex;
  flex-direction: row;
}

.form-item-label{
  color:#333;
  font-size: 14px;
  flex: 1;
} 

.form-item-val{
  flex: 2;
  display: flex;
  flex-direction: row;
}

.form-item-input{
  color:#333; 
  font-size: 14px;
  width:100%;
}

.picker{
  color: #333;
  font-size: 14px;
  flex:1; 
}

.form-submit{
  width: 100%;
  height: 80rpx;
  background-color: #b39ddb;  
  color: #ffffff;
  font-size: 16px;
  margin: 30rpx 20rpx;
  padding: 20rpx 0; 
  border-radius: 8rpx;
  display: inline-flex; 
  align-items: center;
  opacity: 1.0;
}

.form-submit-hover{
  background-color: #b39ddb;    
  opacity: 0.8;
}