page{
    height: 100%;
    background-color: #f4f4f4;
}

.page{ 
    font-family: "PingFang SC","Microsoft Yahei",Arial, Helvetica, sans-serif;
    font-size: 14px;
    background-color: #f4f4f4;
}
.field-item{
    display: flex;
    flex-direction: row;
    padding: 10px;
    border-bottom:1px #eaeaea solid;
    background-color: #fff;
}
.field-item-2{
    display: flex;
    flex-direction: row; 
    padding:0 10px;
}
.field-item-label{
    flex:1;
}
.field-item-val{
    flex:3;
}

 

 


 

/**底部按钮**/
.footer{
    margin: 20rpx 30rpx; 
}
.field-ok{ 
    color:#eee;
    font-size: 14px;    
    height: 80rpx;
    background-color: #e84445;
}
.field-ok-hover{
    background-color: #e84445;
    opacity: 0.7;
}