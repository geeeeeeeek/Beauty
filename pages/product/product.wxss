
.page{ 
    width:100%;
    font-family: "PingFang SC","Microsoft Yahei",Arial, Helvetica, sans-serif;
    font-size: 14px;
    background-color: #f4f4f4;
}

 view,image,text{
     /*border: 1px #f00 solid;*/
 }

/**图片区**/
.page-header{ 
    position: relative;
}

.swiper-image{
   width:100%; 
   height: 100%; 
}

.header-info{
    position: absolute; 
    bottom:0;
    width:100%;
    padding: 20rpx 0;
    background-color: rgba(0,0,0,0.3);
    display: flex;
    flex-direction: row; 
}
 
.info-duration{ 
    color:#fff;
    font-size: 12px; 
    margin-left: 30rpx;
    flex:1;
}
.info-name{
    color:#ddd;
    font-size: 12px;  
    margin-left: 20rpx;
    flex:1;
}
.info-price{
    color:#ddd;
    font-size: 12px; 
    margin-right: 30rpx;
}
.info-price-val{
    color:#fff;
    text-decoration: line-through;
}

/**name区**/
.page-title-wrap{
    display: flex;
    flex-direction: row;
    background-color: #fff;
    padding: 0 30rpx 10rpx;
    border-bottom: 1px #d6d6d6 solid;
}
.page-title{
    flex:1;
    color:#333;
    font-size: 16px;
    margin: 30rpx 0;
}
.page-title-price{
    color:#fff;
    font-size: 14px;
    padding: 24rpx;
    background-color: #f275ac;
}

/**项目条目等**/
.project-item{
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    padding: 0 30rpx 10rpx;
    border-top: 1px #d6d6d6 solid;
    border-bottom: 1px #d6d6d6 solid;
}

.project-label{
    width:95%;
}
 
.project-label-val{
    color:#929292;
    font-size: 16px; 
    width:95%;
    padding: 20rpx;
    border-bottom: 1px #d6d6d6 solid;
}
.project-val{
    width: 95%; 
    color:#333;
    font-size: 12px;
    margin: 30rpx 0;
}

/**预约按钮**/
.yuyue-wrap{
    color:#eee;
    position: fixed;
    bottom: 0px;
    width:100%;
    padding: 30rpx; 
    background-color: #f275ac;
} 