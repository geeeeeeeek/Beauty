/**index.wxss**/

.page{
    background-color: #fff;
  font-family:  "PingFang SC","Microsoft YaHei",Arial,sans-serif; 
}

image,view{
  /*border:1px #f00 solid;*/
}

.swiper-image{
   width:100%; 
   height: 100%; 
}

/**筛选**/
.choose-wrap{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;  
  background-color: #fafafa;
}
.choose-item{
  flex:1;
  font-size: 12px;
  padding-bottom: 5rpx;
}
.choose-item-divider{ 
  color:#eee;
  width: 2rpx; 
}
.choose-item-label{
  color:#333;
  padding: 20rpx 30rpx; 
  border-bottom: 8rpx #fafafa solid;
}
.choose-item-selected{
  color:#f275ac;
  border-bottom: 8rpx #f275ac solid;
}

/**每一条的**/

.list-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1px #ccc solid;
}

.list-item-left-icon{
  width:220rpx;
  height:220rpx;
  border-radius:110rpx;
  margin: 30rpx;
}

.list-item-right{
  flex:1;
  margin: 30rpx 30rpx 30rpx 0rpx;
}

.item-name{
  color:#333;
  font-size: 14px;
  margin-bottom: 20rpx;
}
.item-desc{
  color:#333;
  font-size: 12px;
  margin-bottom: 20rpx;
}
.item-price{
  color:#ff62a7;
  font-size: 14px;
  margin-bottom: 20rpx;
}
.item-duration{
  color:#ff62a7;
  font-size: 12px;
}